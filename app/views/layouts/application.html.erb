<!DOCTYPE html>
<html>
  <head>
    <title>Band Aide</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= Gon::Base.render_data %>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web' rel='stylesheet' type='text/css'>
  </head>

  <body>
  <header class="navigation">
    <div class="navigation-wrapper">
      <a href="javascript:void(0)" class="logo">
        <%=image_tag("background/Band Aide Logo.png")%>
      </a>
      <a href="" class="navigation-menu-button" id="js-mobile-menu">MENU</a>

      <div class="nav">
        <ul id="navigation-menu">
          <li class="nav-link"><a><%= link_to "Home", root_path %></a></li>
            <% if musician_signed_in? %>
              <li class="nav-link"><a><%= link_to "Create a band", new_band_path %> </a></li>
              <li class="nav-link"><a><%= image_tag current_musician.avatar.thumb %> </a></li>
              <li class="nav-link"><a><%= link_to "Show Profile", musician_path(current_musician) %> </a></li>
              <li class="nav-link"><a><%= link_to "Sign Out", destroy_musician_session_path, :method => :delete %> </a></li>
            <% else %>
              <li class="nav-link"><a><%= link_to "Sign In", new_musician_session_path, :method => :get %></a>
              </li>
              <li class="nav-link"><a><%= link_to "Sign up", new_musician_registration_path, :method => :get %> </a></li>
            <% end %>
        </ul>
      </div>

      <div class="navigation-tools">
        <div class="search-bar">
          <div class="search-and-submit">
            <input type="search" placeholder="Search for band or musician" />
            <button type="submit">
              <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png" alt="">
            </button>
          </div>
        </div>
      </div>
    </div>
  </header>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

  <%= yield %>

