

<!DOCTYPE html>
<html>
  <head>
    <title>Band Aide</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav>
      <%= link_to "Band Aide", root_path %>
      <% if musician_signed_in? %>
        <%= image_tag current_musician.avatar.thumb %>
        <%= link_to "Show Profile", musician_path(current_musician) %>
        Welcome <%= current_musician.firstname %>
        <%= link_to "Create a band", new_band_path %>
        <%= link_to "Sign Out", destroy_musician_session_path, :method => :delete %>
      <% else %>
        <%= link_to "Sign In", new_musician_session_path, :method => :get %>
        <%= link_to "Sign up", new_musician_registration_path, :method => :get %>

<% end %>
    </nav>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

  <%= yield %>

  </body>
</html>
