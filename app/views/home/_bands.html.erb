<div class="row" data-equalizer data-equalize-on="medium" id="test-eq">

  <% @bands.each do |band| %>

    <div class="medium-4 large-4 columns">
      <%= link_to band_path(band.id) do %>
      <div class="equalizer">
        <div class="card">
          <%= image_tag band.poster.card, class: "musc"%>
          <div class="card-text">

              <p class="font-title"><%= band.name  %>
              </p>
              <p class="font-description"><%= band.description %></p>
          </div>
          <div class="success progress" role="progressbar" tabindex="0" aria-valuenow="25" aria-valuemin="0" aria-valuetext="25 percent" aria-valuemax="100">
            <div class="progress-meter" style="width: <%= band.how_full %>%">
              <p class="progress-meter-text"><%= band.how_full %>%</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
