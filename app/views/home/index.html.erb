<div class="container">

  <div class="hero">

  </div>

  <main>
    <h1>Welcome to Band Aide</h1>

    <section id="bands-list">

      <h3>Bands</h3>

      <div class="bands">
        <%= render "home/bands" %>
      </div>
    </section>

    <section id="musicians-list">
      <h3>Musicians near you</h3>

      <div class="musicians">
        <%= render "home/musicians" %>
      </div>
    </section>
    <!-- <section>
      <div id="map">

      </div>
    </section> -->
  </main>

  <aside id="search-category-list">
    <p>Search Bands by Genre:</p>
    <%= link_to "All", remote: true, class: "All" %>
    <% @genres.each do |genre| %>
      <%= link_to genre.description, remote: true, class: "#{genre.description}" %>
    <% end %>
  </aside>
</div>
