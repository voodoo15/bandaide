<div class="container">

  <div class="hero">

  </div>

  <main>
    <h1>Welcome to Band Aide</h1>

    <section id="bands-list">

      <h3>Bands</h3>

      <div class="bands">
        <%= render "home/bands" %>
      </div>
    </section>

    <section id="musicians-list">
      <h3>Musicians near you</h3>

      <% @musicians.each do |musician| %>
        <%= link_to musician.firstname, musician_path(musician.id) %><br />
        <%= image_tag musician.avatar.thumb %><br />
        <% if current_musician.present? %>
          <%= musician.display_distance_to(@musician) %> km away<br />
        <% else %>
          Based in <%= musician.city %>
        <% end %>
      <% end %>
    </section>
    <!-- <section>
      <div id="map">

      </div>
    </section> -->
  </main>

  <aside id="search-category-list">
    <p>Search Bands by Genre:</p>
    <ul>
      <li>
        <%= link_to "All", remote: true, class: "All" %>
      </li>
      <% @genres.each do |genre| %>
        <li>
          <%= link_to genre.description, remote: true, class: "#{genre.description}" %>
        </li>
      <% end %>
    </ul>

  </aside>
</div>
